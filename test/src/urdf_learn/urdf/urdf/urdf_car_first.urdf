<robot name="mycar">
    <link name="base_link">
        <visual>
            <geometry>
                <!-- box -->
                <box size="2 1 1" />
            </geometry>
            <!-- xyz坐标 rpy翻滚俯仰与偏航角度(3.14=180度 1.57=90度) -->
            <origin xyz="2 0 0" rpy = "0 0 0" />
            <!-- color and out-look -->
            <material name="car_color">
                <color rgba="0 0 0.9 0.5"/>
            </material>
        </visual>
    </link>

    <link name="camera"> 
        <visual>
            <geometry>
                <!-- box -->
                <box size="0.5 0.2 0.1" />
            </geometry>
            <!-- xyz坐标 rpy翻滚俯仰与偏航角度(3.14=180度 1.57=90度) -->
            <origin xyz="3 0 0.25" rpy = "0 1.57 0" />
            <!-- color and out-look -->
            <material name="camera_color">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>

    <joint name="cameraTobase" type="continuous">
        <!-- parent link -->
        <parent link="base_link" />
        <!-- childen link -->
        <child link="camera" />
        <!-- 偏航角度 -->
        <origin xyz="0 0 0" rpy="0 0 0" />
        <!-- reference system -->
        <axis xyz = "0 0 1" />  
    </joint>
</robot>
